            transition: transform 0.3s ease;
        }

        .forum-category:hover {
            transform: translateY(-5px);
        }

        .forum-category h3 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }

        /* Form Styles */
        .form-container {
            background-color: var(--card-bg);
            padding: 2rem;
            margin: 2rem 0;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .form-container h2 {
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        input {
            width: 100%;
            padding: 0.8rem;
            margin: 0.8rem 0;
