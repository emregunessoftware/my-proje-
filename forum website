<div class="container">
    <!-- Forum Categories -->
    <div class="forum-category">
        <h3><i class="fas fa-globe"></i> General Discussions</h3>
        <p class="author">Category: General</p>
        <p class="content">Talk about general topics here.</p>
        <button><i class="fas fa-arrow-right"></i> View Topics</button>
    </div>

    <div class="forum-category">
        <h3><i class="fas fa-laptop-code"></i> Technology</h3>
        <p class="author">Category: Technology</p>
        <p class="content">Discuss the latest in tech.</p>
        <button><i class="fas fa-arrow-right"></i> View Topics</button>
    </div>

    <div class="forum-category">
        <h3><i class="fas fa-gamepad"></i> Gaming</h3>
        <p class="author">Category: Gaming</p>
        <p class="content">Share your gaming experiences.</p>
        <button><i class="fas fa-arrow-right"></i> View Topics</button>
    </div>

    <!-- Registration Form -->
    <div class="form-container">
        <h2><i class="fas fa-user-plus"></i> Register</h2>
        <form id="registerForm">
            <input type="text" id="username" placeholder="Username" required>
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="password" placeholder="Password" required>
            <button type="submit"><i class="fas fa-sign-in-alt"></i> Register</button>
        </form>
    </div>

    <!-- Login Form -->
    <div class="form-container">
        <h2><i class="fas fa-sign-in-alt"></i> Login</h2>
        <form id="loginForm">
            <input type="text" id="loginUsername" placeholder="Username" required>
            <input type="password" id="loginPassword" placeholder="Password" required>
            <button type="submit"><i class="fas fa-lock"></i> Login</button>
        </form>
    </div>

    <!-- Forum Posts -->
    <div class="forum-posts">
        <div class="forum-post">
            <h3>Welcome to Our Community!</h3>
            <p class="author"><i class="fas fa-user"></i> Posted by: Admin</p>
            <p class="content">Welcome to our forum! Feel free to explore and join the discussions.</p>
            <button><i class="fas fa-reply"></i> Reply</button>
        </div>

        <div class="forum-post">
            <h3>Tech News Discussion</h3>
            <p class="author"><i class="fas fa-user"></i> Posted by: TechGuru</p>
            <p class="content">Let's discuss the latest technology trends and news!</p>
            <button><i class="fas fa-reply"></i> Reply</button>
        </div>

        <div class="forum-post">
            <h3>Gaming Community Meet-up</h3>
            <p class="author"><i class="fas fa-user"></i> Posted by: GameMaster</p>
