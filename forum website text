    <!-- Script kısmını tamamen değiştirin -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tüm butonları seçelim
        const submitButtons = document.querySelectorAll('.submit-comment');
        const newPostBtn = document.querySelector('.new-post-btn');
        const modal = document.getElementById('newPostModal');
        const closeBtn = document.querySelector('.close');

        // Yorum butonlarına tıklama olayı ekleyelim
        submitButtons.forEach(button => {
            button.addEventListener('click', function() {
                const textarea = this.previousElementSibling;
                const commentsSection = this.closest('.comments-section');
                
                if (textarea.value.trim() !== '') {
                    // Yeni yorum oluştur
                    const newComment = document.createElement('div');
                    newComment.className = 'comment';
                    newComment.innerHTML = `
                        <div class="comment-meta">
                            <strong>Kullanıcı</strong> | ${new Date().toLocaleDateString()}
                        </div>
                        <p>${textarea.value}</p>
                    `;
                    
                    // Yorumu ekle
                    commentsSection.insertBefore(newComment, this.parentElement);
                    textarea.value = '';
                    alert('Yorumunuz eklendi!');
                }
            });
        });

        // Yeni Başlık Aç butonu için
        newPostBtn.addEventListener('click', function() {
            modal.style.display = 'block';
        });

        // Modal kapatma butonu için
        closeBtn.addEventListener('click', function() {
            modal.style.display = 'none';
        });

        // Modal dışına tıklandığında kapatma
        window.addEventListener('click', function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        });

        // Yeni başlık formu gönderimi
        const newPostForm = document.getElementById('newPostForm');
        newPostForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const title = this.querySelector('input').value;
            const category = this.querySelector('select').value;
            const content = this.querySelector('textarea').value;

            // Yeni post oluştur
            const newPost = document.createElement('div');
            newPost.className = 'post';
            newPost.innerHTML = `
                <div class="post-header">
                    <h2 class="post-title">${title}</h2>
                    <div class="post-meta">
                        <span>Yazar: Kullanıcı</span> |
                        <span>Tarih: ${new Date().toLocaleDateString()}</span> |
                        <span>Kategori: ${category}</span>
                    </div>
                </div>
                <div class="post-content">
                    <p>${content}</p>
                </div>
                <div class="comments-section">
                    <h3>Yorumlar</h3>
                    <div class="new-comment">
                        <textarea placeholder="Yorumunuzu yazın..." rows="4"></textarea>
                        <button class="submit-comment">Yorum Yap</button>
                    </div>
                </div>
            `;

            // Yeni postu sayfanın başına ekle
            const container = document.querySelector('.container');
            container.insertBefore(newPost, container.firstChild);

            // Yeni eklenen postun yorum butonuna olay dinleyici ekle
            const newSubmitButton = newPost.querySelector('.submit-comment');
            newSubmitButton.addEventListener('click', function() {
                const textarea = this.previousElementSibling;
                const commentsSection = this.closest('.comments-section');
                
                if (textarea.value.trim() !== '') {
                    const newComment = document.createElement('div');
                    newComment.className = 'comment';
                    newComment.innerHTML = `
                        <div class="comment-meta">
                            <strong>Kullanıcı</strong> | ${new Date().toLocaleDateString()}
                        </div>
                        <p>${textarea.value}</p>
                    `;
                    
                    commentsSection.insertBefore(newComment, this.parentElement);
                    textarea.value = '';
                    alert('Yorumunuz eklendi!');
                }
            });

            // Formu temizle ve modalı kapat
            this.reset();
            modal.style.display = 'none';
            alert('Başlık başarıyla oluşturuldu!');
        });
    });
      
   
      function showCategory() {
        const categories = ["Teknoloji", "Spor", "Sanat", "Bilim", "Müzik"];
        const selected = prompt("Bir kategori seçin: " + categories.join(", "));
        
        if (categories.includes(selected)) {
            document.getElementById("selectedCategory").innerText = "Seçilen Kategori: " + selected;
        } else if (selected) {
            alert("Geçerli bir kategori girin!");
        }
    }
      
      
      document.getElementById("categoriesBtn").addEventListener("click", function() {
        // Kategoriler ve yönlendirme yapılacak sayfalar
        const categories = {
            "Teknoloji": "technology.html",
            "Spor": "sports.html",
            "Sanat": "art.html",
            "Bilim": "science.html",
            "Müzik": "music.html"
        };

        // Kullanıcıdan kategori seçmesini isteyen prompt
        const selected = prompt("Bir kategori seçin: " + Object.keys(categories).join(", "));

        // Geçerli bir kategori seçildiyse yönlendir
        if (categories[selected]) {
            window.location.href = categories[selected]; 
        } else if (selected) {
            alert("Geçerli bir kategori girin!");
        }
    });
      
      function searchPost() {
        let searchValue = document.getElementById("searchInput").value.toLowerCase().trim();
        let posts = document.querySelectorAll(".post-title"); // Sadece başlıkları al

        let found = false;

        posts.forEach(post => {
            if (post.innerText.toLowerCase().includes(searchValue)) {
                post.scrollIntoView({ behavior: "smooth", block: "center" }); // Yumuşak kaydırma
                post.style.backgroundColor = "yellow"; // Geçici vurgulama (isteğe bağlı)
                setTimeout(() => { post.style.backgroundColor = ""; }, 2000);
                found = true;
            }
        });

        if (!found) {
            alert("Aradığınız başlık bulunamadı!");
        }
    }
      
      
    </script>
</body>
